{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "../../dist/out-tsc",
    "module": "es2022",
    "moduleResolution": "bundler",
    "types": ["node"],
    "baseUrl": "../../",
    "paths": {
      "@shared/*": ["shared/src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["jest.config.ts", "jest.config.cts", "src/**/*.spec.ts", "src/**/*.test.ts"]
}
