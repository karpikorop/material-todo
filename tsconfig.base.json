{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["es2022", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@shared": ["libs/shared/src/index.ts"],
      "@shared/*": ["libs/shared/src/lib/*"],
      "web-public-ui": ["libs/web-public-ui/src/index.ts"],
      "auth-data-access": ["libs/auth-data-access/src/index.ts"],
      "core-data-access": ["libs/core-data-access/src/index.ts"],
      "entries-data-access": ["libs/entries-data-access/src/index.ts"],
      "tasks-feature": ["libs/tasks-feature/src/index.ts"],
      "settings-feature": ["libs/settings-feature/src/index.ts"],
      "shared-ui": ["libs/shared-ui/src/index.ts"],
      "private-layout-feature": ["libs/private-layout-feature/src/index.ts"],
      "auth-feature": ["libs/auth-feature/src/index.ts"],
      "web-public-feature": ["libs/web-public-feature/src/index.ts"]
    },
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": ["node_modules", "tmp"]
}
